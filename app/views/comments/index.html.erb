  <strong><%#= comment.name %></strong>
  <em>on <%#= comment.created_at.strftime('%b %d, %Y at %I:%M %p') %></em>
  <%#= simple_format comment.content %>
</div>-->
  
  $('<%= escape_javascript(render(:partial => @comment))%>')
  .appendTo('#comments')
  .hide()
  .fadeIn()

$('#new_comment')[0].reset()

$('#comments_count').html '<%= comments_count %>'
